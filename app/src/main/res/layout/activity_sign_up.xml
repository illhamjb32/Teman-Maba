<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rec"
    tools:context=".SignUpActivity">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="back"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="338dp"
        android:layout_height="409dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">


        <EditText
            android:id="@+id/edtNama"
            android:layout_width="298dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_white"
            android:ems="10"
            android:fontFamily="@font/montserratregular"
            android:hint="Nama"
            android:inputType="textPersonName" />

        <RadioGroup
            android:id="@+id/rgJK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="546dp">

            <RadioButton
                android:id="@+id/rbLaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:checked="true"
                android:text="Laki-laki"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="550dp" />

            <RadioButton
                android:id="@+id/rbPerempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Perempuan"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="550dp" />
        </RadioGroup>


        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="298dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/button_white"
            android:ems="10"
            android:fontFamily="@font/montserratregular"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="298dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/button_white"
            android:ems="10"
            android:fontFamily="@font/montserratregular"
            android:hint="Phone"
            android:inputType="phone" />

        <Spinner
            android:id="@+id/spinnerPertanyaan"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/custom_spinner"
            android:entries="@array/scurity_question"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="521dp" />

        <EditText
            android:id="@+id/edtAnswer"
            android:layout_width="298dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/button_white"
            android:ems="10"
            android:fontFamily="@font/montserratregular"
            android:hint="Answer"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="298dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/button_white"
            android:ems="10"
            android:fontFamily="@font/montserratregular"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="298dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/button_white"
            android:ems="10"
            android:fontFamily="@font/montserratregular"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button2"
        android:layout_width="345dp"
        android:layout_height="54dp"
        android:background="@drawable/button_white"
        android:fontFamily="@font/montserratregular"
        android:text="Sign Up"
        android:onClick="insert"
        android:textColor="@color/blue_bg"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="109dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/communication" />

</androidx.constraintlayout.widget.ConstraintLayout>