<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bgapp"
    android:layout_height="match_parent"
    tools:context=".DetailProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bnr"
                android:src="@drawable/banner"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="back"
                android:scaleType="fitXY"
                android:src="@drawable/back"/>
            <TextView
                android:id="@+id/txtNama"
                android:gravity="center_horizontal"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:text="YOUR PROFILE"
                android:textColor="@color/white"
                android:textSize="30dp"/>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="80dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/detailPP"
                        android:layout_width="200dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/woman" />
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="Nama"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/td"
                        android:layout_alignRight="@id/td2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text=":"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/viewNama"
                        android:layout_marginLeft="10dp"
                        android:text="Ilham Jody Bimantara"
                        android:layout_toRightOf="@id/td"
                        android:fontFamily="@font/montserratregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/jk"
                        android:layout_below="@id/viewNama"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="Jenis Kelamin"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/td2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@id/viewNama"
                        android:layout_toRightOf="@id/jk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text=":"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/viewJk"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Profile"
                        android:layout_below="@id/viewNama"
                        android:layout_toRightOf="@id/td2"
                        android:fontFamily="@font/montserratregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/almt"
                        android:layout_below="@id/viewJk"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="Alamat"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/td3"
                        android:layout_alignRight="@id/td2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@id/viewJk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text=":"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/viewAlmt"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Profile"
                        android:layout_below="@id/viewJk"
                        android:layout_toRightOf="@id/td3"
                        android:fontFamily="@font/montserratregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tgl"
                        android:layout_below="@id/viewAlmt"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="Tanggal Lahir"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/td4"
                        android:layout_alignRight="@id/td2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@id/viewAlmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text=":"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/viewTgl"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Profile"
                        android:layout_below="@id/viewAlmt"
                        android:layout_toRightOf="@id/td4"
                        android:fontFamily="@font/montserratregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/mail"
                        android:layout_below="@id/tgl"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="Email"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/td5"
                        android:layout_alignRight="@id/td2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@id/viewTgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text=":"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/viewEmail"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Profile"
                        android:layout_below="@id/viewTgl"
                        android:layout_toRightOf="@id/td5"
                        android:fontFamily="@font/montserratregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/phone"
                        android:layout_below="@id/viewEmail"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text="Telp"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/td6"
                        android:layout_alignRight="@id/td2"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@id/viewEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratbold"
                        android:text=":"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/viewTelp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="Profile"
                        android:layout_below="@id/viewEmail"
                        android:layout_toRightOf="@id/td6"
                        android:fontFamily="@font/montserratregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"/>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

<Button
    android:layout_width="match_parent"
    android:onClick="editProfile"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:text="Edit Profile"
    android:textColor="@color/white"
    android:fontFamily="@font/montserratbold"
    android:background="@drawable/button_blue"
    android:layout_height="match_parent"/>



    </LinearLayout>





</ScrollView>

